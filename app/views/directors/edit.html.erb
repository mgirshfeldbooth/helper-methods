<h1>Edit director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(url: director_path(@director), method: :patch) do %>
  <div>
    <%= label_tag :name, "Name" %>

    <%= text_field_tag :name, @director.name %>
  </div>

  <div>
    <%= label_tag :dob %>
    
    <%= text_area_tag :dob, @director.dob,  id: "dob", rows: 3 %>
  </div>

  <%= button_tag "Update director" %>
<% end %>
